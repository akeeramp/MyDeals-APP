<script src="/app/dashboard/config/widget.config.js"></script>
@{
    ViewBag.Title = "Dashboard";
}

<script>
    setTimeout(function() {
        document.location.href = "/Dashboard#/portal";
    }, 5000);
</script>


<canvas id='canv' style="position: absolute; width: 100%; height: 100%;"></canvas>
<div class="center">
    <h2>Happy Holidays!!!</h2>
    <div>
        The snow is falling, but the Dashboard is still loading!!!
    </div>    
</div>

<script>
    var c = document.getElementById('canv');
    var cSnow = c.getContext("2d");
    var w = c.width = window.innerWidth;
    var h = c.height = window.innerHeight;

    Snowy();
    function Snowy() {
        var snow, arr = [];
        var num = 600, tsc = 1, sp = 1;
        var sc = 1.3, t = 0, mv = 5, min = 1;
        for (var i = 0; i < num; ++i) {
            snow = new Flake();
            snow.y = Math.random() * (h + 50);
            snow.x = Math.random() * w;
            snow.t = Math.random() * (Math.PI * 2);
            snow.sz = (100 / (10 + (Math.random() * 100))) * sc;
            snow.sp = (Math.pow(snow.sz * .8, 2) * .15) * sp;
            snow.sp = snow.sp < min ? min : snow.sp;
            arr.push(snow);
        }
        go();
        function go() {
            window.requestAnimationFrame(go);
            cSnow.clearRect(0, 0, w, h);
            cSnow.fillStyle = 'hsla(242, 95%, 3%, 1)';
            cSnow.fillRect(0, 0, w, h);
            cSnow.fill();
            for (var i = 0; i < arr.length; ++i) {
                f = arr[i];
                f.t += .05;
                f.t = f.t >= Math.PI * 2 ? 0 : f.t;
                f.y += f.sp;
                f.x += Math.sin(f.t * tsc) * (f.sz * .3);
                if (f.y > h + 50) f.y = -10 - Math.random() * mv;
                if (f.x > w + mv) f.x = -mv;
                if (f.x < -mv) f.x = w + mv;
                f.draw();
            }
        }
        function Flake() {
            this.draw = function () {
                this.g = cSnow.createRadialGradient(this.x, this.y, 0, this.x, this.y, this.sz);
                this.g.addColorStop(0, 'hsla(255,255%,255%,1)');
                this.g.addColorStop(1, 'hsla(255,255%,255%,0)');
                cSnow.moveTo(this.x, this.y);
                cSnow.fillStyle = this.g;
                cSnow.beginPath();
                cSnow.arc(this.x, this.y, this.sz, 0, Math.PI * 2, true);
                cSnow.fill();
            }
        }
    }
    /*________________________________________*/
    //window.addEventListener('resize', function () {
