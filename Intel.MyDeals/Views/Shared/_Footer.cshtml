@using Intel.MyDeals.App
@{
    ApplicationViewModel avm = (ApplicationViewModel) ViewData.Model;
    var environment = avm.AppEnv.ToUpper().IndexOf("PROD") >= 0 ? "" : " (" + avm.AppEnv + ")";
}

<div class="footer-bar">
    <div class="fl">@avm.AppVer</div>
    <div class="fl env">@environment</div>
</div>

<style>
    .footer-bar {
        position: absolute; 
        bottom: 0; 
        background-color: #0071C5;
        color: #ffffff;
        width: 100%; height: 15px; 
        font-size: 10px; 
        padding: 0 10px;
    }
    .env {
        padding: 0 10px;
        color: #f3D54E;
    }
</style>
