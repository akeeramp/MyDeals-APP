    <script src="/Scripts/bootstrap-switch.min.js" async></script>
    <script src="/Scripts/modernizr-2.8.3.min.js" async></script>--> @* 2.8.3 is the most up to date version compatible with our project, look into upgrading dependency calls or omitting Modernizr from the project in the future*@
    <!-- #endregion -->
</head>

    <body @Html.RequestVerificationToken()>
        @*Since Angular bundle size is increasing the overall loading time will incresing which cause delay in UI landing page to load.
        To avoid that brining the loading to _layout.cshtml page and will make is disable in dashboard*@
        @Html.Partial("_Header")
        <div id="modals"></div>
        <div id="bodyContent" class="mainBodyStyle">
            <app-root></app-root>
            @RenderBody()
        </div>
        <app-loader></app-loader>
    </body>
</html>