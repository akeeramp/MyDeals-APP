    @* @Styles.Render("~/MyDeals/cssClient") *@
    <link href="/Client/src/dist/globalStyle.css" rel="stylesheet">

    <style>
        .mainBodyStyle {
            position: absolute;
            top: 0px !important;
            left: 0;
            right: 0;
            overflow: hidden !important;
            height: 100%;
        }

        myInvalidClass {
            background-color: red;
        }

        .loading-screen {
            top: 0px !important;
            height: 100vh !important;
        }

        .jumbotron {
            height: -webkit-fill-available;
            margin-bottom: unset;
        }

        .loading-screen .load-text {
            font-size: 20px;
        }
    </style>
    <!-- #endregion -->
    <!-- #region JavaScript Libraries -->
    @Scripts.Render("~/bundles/scriptsAng")
    @* Versions of Bootstrap, Bootstrap-Switch, Popper, JQuery must match those in the Angular project's package.json file *@
    <!--<script src="/Scripts/jquery.min.js" async></script>
    <script src="/Scripts/popper_1.16.1.min.js" async></script>-->   @* Popper.js 1.16.1 is the latest version compatible with Bootstrap 4.x; when upgrading to Bootstrap 5, can upgrade this to @popperjs/core^2.0*@
